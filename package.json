{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo \"Error: I SHOULD FAIL LOLOLOLOLOL \" && exit 1",
    "foo": "echo \"fooo\" && exit 0",
    "bar": "echo \"bar\" && exit 0"
  },
  "pre-commit": [
    "foo",
    "bar",
    "test"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"git commit trigger husky pre-commit hook\" "
    }
  },
  "devDependencies": {
    "commitizen": "^4.2.3",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^5.1.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "standard": "^16.0.3"
  }
}