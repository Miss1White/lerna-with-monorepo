{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "c": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"git commit trigger husky pre-commit hook\" ",
      "commit-msg": "echo \"git commit trigger husky commit-msg hook\""
    }
  },
  "devDependencies": {
    "commitizen": "^4.2.3",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^5.1.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "standard": "^16.0.3"
  }
}